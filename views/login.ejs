<%- include("partials/header") %>
<div class="container mb-5">
    <div class="container py-3">
        <div class="row">
            <div class="col-md-12">
                <h1 class="text-center mb-3 mt-4 text-white">Log In</h1>
                <hr class="mb-4">
                <div class="row justify-content-center">
                    <div class="col-md-12">
                        <form class="form" action="/login" method="POST">
                            <div class="card card-outline-secondary">
                                <div class="card-header">
                                    <h3 class="mb-0">Enter Details</h3>
                                </div>
                                <div class="card-body">
                                    <div class="form-group">
                                        <label for="uname">Your Name</label>
                                        <input class="form-control" id="uname1" name="username" required type="text">
                                    </div>
                                    <div class="form-group">
                                        <label for="inputEmail">Email</label>
                                        <input class="form-control" id="inputEmail" name="email" required type="email">
                                    </div>
                                    <div class="form-group">
                                        <label for="Password">Password</label>
                                        <input class="form-control" id="Password" name="password" required
                                            type="password">
                                    </div>
                                    <div class="form-group">
                                        <button class="btn btn-danger btn-lg float-right btn-block" type="submit">Log
                                            In</button>
                                    </div>
                                </div>
                            </div>   
                        </form>
                        <hr class="mb-5">
                        <form class="form" action="/auth/google" method="GET">
                            <div class="card card-outline-secondary">
                                <div class="card-body">
                                    <div class="alert text-center">
                                        <p>Login Using GOOGLE</p>
                                    </div>
                                    <button class="btn btn-danger btn-lg float-right btn-block" type="submit">Log
                                    In</button>
                                </div>
                            </div>
                        </form>
                        <hr class="mb-5">
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include("partials/footer") %>
